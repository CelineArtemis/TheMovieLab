<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="330.0" prefWidth="180.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moviesapp.controller.MovieController">
   <children>
      <ImageView fx:id="moviePoster" fitHeight="250.0" fitWidth="180.0" onMouseClicked="#handleClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icons/jacket.jpg" />
         </image>
      </ImageView>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="title" alignment="CENTER" prefHeight="18.0" prefWidth="141.0" text="OPPENHEIMER" textFill="#bcbaba">
               <font>
                  <Font name="Comic Sans MS Bold" size="13.0" />
               </font>
            </Label>
            <ImageView fx:id="favorite" fitHeight="47.0" fitWidth="19.0" onMouseClicked="#handleFavoriteClick" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@icons/addfav.png" />
               </image>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="26.0" prefWidth="160.0">
         <children>
            <Label fx:id="director" alignment="CENTER" prefHeight="15.0" prefWidth="161.0" text="Christopher Nolan" textFill="#bcbaba">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="3.0">
         <children>
            <Label fx:id="genre" prefHeight="15.0" prefWidth="160.0" text="Drame, Histoire" textFill="#bcbaba">
               <font>
                  <Font name="Comic Sans MS Italic" size="10.0" />
               </font>
            </Label>
            <Label fx:id="rating" alignment="CENTER" prefHeight="10.0" prefWidth="160.0" text="Rating :  81%" textFill="#bcbaba">
               <font>
                  <Font name="Comic Sans MS" size="10.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <styleClass>
      <String fx:value="shadow" />
      <String fx:value="primary_color" />
   </styleClass>
</VBox>
